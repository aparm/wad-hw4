<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Title</title>

    <link href="css/style.css" rel="stylesheet">
</head>
<body>
<%- include('partials/header'); %>
<main>

<h1>Posts</h1>

<div class="posts list">


    <%if (posts.length > 0) { %>

        <h2>All posts</h2>
        <% posts.forEach(post => { %>
            <a href="/singlepost/<%= post.id %>">
                <div class="post">
                    <div class="post-info">
                        <img class="post-author-photo" src="<%= post.authorPhoto %>">
                        <p class="date"><%= post.date %></p>
                    </div>
                    <img class="post-image" src="<%= post.image %>">
                    <p class="post-text"><%= post.text %></p>
                    <button class="like-button" > <%= post.likes %></button>
                </div>
            </a>
        <% }) %>

    <% } else { %>
    <h2>You did not post anything!</h2>
    <% } %>
</div>

</main>
<%- include('partials/footer'); %>
</body>
</html>